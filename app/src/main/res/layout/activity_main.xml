<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <views.CanvasView
        android:id="@+id/can1"
        android:layout_width="match_parent"
        android:layout_height="350dp" />



    <Button
        android:id="@+id/b1"
        android:text="1"
        android:layout_width="135px"
        android:layout_height="wrap_content"
        android:layout_below="@+id/can1"
        android:layout_marginLeft="50px"/>

    <Button
        android:id="@+id/b2"
        android:text="2"
        android:layout_width="135px"
        android:layout_height="wrap_content"
        android:layout_below="@+id/can1"
        android:layout_toRightOf="@+id/b1"/>

    <Button
        android:id="@+id/b3"
        android:text="3"
        android:layout_width="135px"
        android:layout_height="wrap_content"
        android:layout_below="@+id/can1"
        android:layout_toRightOf="@+id/b2"/>


    <Button
        android:id="@+id/b4"
        android:text="4"
        android:layout_width="135px"
        android:layout_height="wrap_content"
        android:layout_below="@+id/can1"
        android:layout_toRightOf="@+id/b3"/>


    <Button
        android:id="@+id/b5"
        android:text="5"
        android:layout_width="135px"
        android:layout_height="wrap_content"
        android:layout_below="@+id/can1"
        android:layout_toRightOf="@+id/b4"/>


    <Button
        android:id="@+id/b6"
        android:text="6"
        android:layout_width="135px"
        android:layout_height="wrap_content"
        android:layout_below="@+id/can1"
        android:layout_toRightOf="@+id/b5"/>


    <Button
        android:id="@+id/b7"
        android:text="7"
        android:layout_width="135px"
        android:layout_height="wrap_content"
        android:layout_below="@+id/can1"
        android:layout_toRightOf="@+id/b6"/>


    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/b6"
        android:layout_margin="50px"
        android:layout_marginStart="50px"
        android:layout_marginLeft="50px"
        android:layout_marginTop="50px"
        android:layout_marginEnd="50px"
        android:layout_marginRight="50px"
        android:layout_marginBottom="50px"
        android:text="Click on the Column Number to Add Coins"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt"
        android:text="UNDO"
        android:layout_margin="50px"
        android:id="@+id/undo"/>

</RelativeLayout>